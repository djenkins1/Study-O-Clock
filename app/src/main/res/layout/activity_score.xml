<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.eo.dilan.studyoclock.ScoreActivity"
    android:orientation="vertical"
    android:background="#1240AB"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/counter"
        android:background="#0E00F3"
        android:textColor="#FFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Questions Missed: ?"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="#06269F"
        >
        <TextView
            android:id="@+id/myLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Question"
            android:focusable="false"
            android:textSize="18sp"
            android:layout_weight="6"
            android:textColor="#FFF"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/myCorrect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Right"
            android:textSize="18sp"
            android:layout_weight="2"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/myWrong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Wrong"
            android:textSize="18sp"
            android:layout_weight="2"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:gravity="right"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
